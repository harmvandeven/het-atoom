{{page-title 'Het Atoom'}}

<Header @model={{@model.chapters}} />
<Timeline @segments={{@model.timeline}} />

<ul class='chapters'>
  {{#each @model.chapters as |chapter index|}}
    {{#if (or chapter.parts (eq index 0))}}
      <li>
        <ChapterHeader @model={{chapter}} @index={{index}} />

        {{#each chapter.parts as |part|}}
          {{#if part.description}}
            <div class='segment'>
              {{markdown-to-html
                markdown=part.description
                extensions='showdownCaption'
              }}
            </div>
          {{/if}}
        {{/each}}
      </li>
    {{/if}}
  {{/each}}
</ul>

{{outlet}}