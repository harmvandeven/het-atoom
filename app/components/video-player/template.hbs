<div class='video-player'>
  <video
    controls
    {{play-when this.isPlaying}}
    {{on 'timeupdate' this.setTime}}
    {{did-insert this.didInsert}}
  >
    <source src='video/sintel-short.mp4' type='video/mp4' />
    <source src='video/sintel-short.mp4' type='video/webm' />
    <!-- fallback content here -->
  </video>
</div>

<div class='controls'>
  {{#if this.isPlaying}}
    <button type='button' {{on 'click' this.pause}}>
      Pause
    </button>
  {{else}}
    <button type='button' {{on 'click' this.play}}>
      Play
    </button>
  {{/if}}
  <div class='timer'>
    <div></div>
    <span aria-label='timer'>
      {{this.time}}
    </span>
  </div>
</div>

{{yield}}