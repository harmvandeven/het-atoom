<div class='video-player' data-currentTime={{this.currentTime}}>
  <video
    autoplay
    muted
    playsinline
    {{on 'timeupdate' this.setReadyForUpdate}}
    {{on 'play' this.onPlay}}
    {{on 'pause' this.onPause}}
    {{did-insert this.didInsert}}
  >
    <source src={{@src}} type={{@type}} />
    <!-- fallback content here -->
  </video>
</div>

{{yield}}