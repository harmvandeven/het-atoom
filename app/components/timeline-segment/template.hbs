<div class='timeline-segment' data-frame={{this.computedFrame}}>
  <div class='container' style={{this.style}}>
    {{#if (eq this.type 'video/mp4')}}
      <VideoPlayer
        @src={{@src}}
        @type={{this.type}}
        @visible={{this.visible}}
        @frame={{this.computedFrame}}
      />
    {{else if (eq this.type 'image')}}
      <ImageElement
        @src={{@src}}
        @visible={{this.visible}}
        @frame={{this.computedFrame}}
      />
    {{else}}
      <h1>
        Unknown type: {{this.type}} => {{@src}}
      </h1>
    {{/if}}
  </div>
</div>

{{yield}}